<h1>Display your Pirate here</h1>

<div class="Pirate">
  <h2>Name: <%= @pirate.name %></h2><br>
  <h2>Weight: <%= @pirate.weight %></h2><br>
  <h2>Height: <%= @pirate.height %></h2>
</div>


<h2>Display your first ship here</h2>

  <% @ships.each do |ship| %>
    <div class="Ship">
      <p>Name: <%= ship.name %></p>
      <p>Type: <%= ship.type %></p>
      <p>Booty: <%= ship.booty %></p>
    </div>
  <% end %>


